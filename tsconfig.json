{
  "compilerOptions": {
    "types" : ["node"],
    "target": "es6",
    "lib": ["dom", "es2021"],
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}